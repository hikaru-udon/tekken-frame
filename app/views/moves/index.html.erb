<%= render "shared/header" %>
<div class="moves-container">

  <%= form_with(url: search_character_moves_path, local: true, method: :get, class:"search-form") do |f| %>
    <%= f.text_field :keyword, placeholder: "キーワードで検索する", class: "search-input" %>
      <%# <%= f.submit "&#xf002; 検索", class: "search-btn"  %>
      <%# 初期値のform.submit内ではFontAwesomeは表示できないので、使用する場合はform.bottonに置き換え、下記の用意記述する %>
    <%= f.button type:"submit", class:"search-btn" %>
  <% end %>

  <div class="back-btn">
    <%=link_to "Topページ", "/", class:"back" %>
    <%=link_to "全技一覧", character_moves_path, class:"back" %>
  </div>

  <div class="character-name">
    <ruby>
      <%= @character.fullname %>
      <rt><%= @character.english_fullname %></rt>
    </ruby>
  </div>

  <table class="moves-data">
    <tr class="moves-category">
      <th>技名</th>
      <th>コマンド</th>
      <th class="hitbox">判定</th>
      <th>発生F</th>
      <th>ガードF</th>
    </tr>
    <% @moves.each do |move| %>
      <tr class="moves-contents">
        <td><%= link_to move.moves_name, character_move_path(id: move), class: "move-links1" %></td>
        <td><%= link_to move.command, character_move_path(id: move), class: "move-links1" %></td>
        <td class="hitbox"><%= link_to move.hitbox, character_move_path(id: move), class: "move-links1" %></td>
        <td><%= link_to move.startup, character_move_path(id: move), class: "move-links2" %></td>
        <td><%= link_to move.block, character_move_path(id: move), class: "move-links2" %></td>
      </tr>
    <% end %>
  </table>

  <%= render "shared/page-top" %> 
  <%# <%= javascript_pack_tag 'move/application.js' %>

</div>
<%= render "shared/footer" %>