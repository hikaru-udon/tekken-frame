<div class="moves-main">

  <%= render "shared/header" %>

  <div class="moves-search-form">
    <%= form_with(url: search_character_moves_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "技を検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
  </div>

  <div class="back-button">
    <%=link_to "技一覧に戻る", character_moves_path %>
  </div>

  <div class="character-name">
    <h1><%= @character.name %></h1>
  </div>

  <table class="category">
    <tr>
      <th>技名</th>
      <th>コマンド</th>
      <th>ダメージ</th>
      <th>発生F</th>
      <th>ガードF</th>
    </tr>
    <% @moves.each do |moves| %>
      <tr>
        <td><%=link_to moves.moves_name, "#", class: "name-link" %></td>
        <td><%= moves.command %></td>
        <td><%= moves.damage %></td>
        <td><%= moves.startup %></td>
        <td><%= moves.block %></td>
      </tr>
    <% end %>
  </table>

</div>
